CREATE DATABASE measurement;
USE measurement;
CREATE TABLE humidity (Table_Id INT NOT NULL AUTO_INCREMENT PRIMARY KEY, Date_and_Time DATETIME, Sensor_Id  VARCHAR(100) NOT NULL, humidity INT, temperature INT);
CREATE TABLE pressure (Table_Id INT NOT NULL AUTO_INCREMENT PRIMARY KEY, Date_and_Time DATETIME, Sensor_Id  VARCHAR(100) NOT NULL, pressure INT, temperature INT);
CREATE TABLE temperature (Table_Id INT NOT NULL AUTO_INCREMENT PRIMARY KEY, Date_and_Time DATETIME, Sensor_Id  VARCHAR(100) NOT NULL, Value INT);
CREATE TABLE sensors (Table_Id INT NOT NULL AUTO_INCREMENT PRIMARY KEY, Date_and_Time DATETIME NOT NULL, Sensor_Id VARCHAR(100) NOT NULL, Sensor_Location VARCHAR(100) NOT NULL, Sensor_Type VARCHAR(100) NOT NULL);
